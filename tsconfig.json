{
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ESNext"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "paths": { "@/*": ["src/*"] },
        "rootDirs": ["src"],
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext"
    },
    "include": ["src/**/*.ts"]
}
